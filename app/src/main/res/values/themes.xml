<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeLightPurple" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Chip_Style</item>


        //Attribute
        <item name="banner">@drawable/banner_purple</item>

        <item name="whiteBlack">#ffffff</item>
        <item name="blackWhite">#000000</item>
        <item name="surahName">#250000</item>
        <item name="search">#EAE5E5</item>
        <item name="searchSheet">#E6FFFFFF</item>
        <item name="accent">@color/purple</item>
        <item name="translitaration">#1A6F32C3</item>
    </style>

