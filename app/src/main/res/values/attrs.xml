<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation"/>
    </declare-styleable>

    <declare-styleable name="SunriseSunsetView">
        <!-- Track color -->
        <attr name="ssv_track_color" format="color|reference"/>
        <!-- Track width -->
        <attr name="ssv_track_width" format="dimension"/>

        <!-- Sun radius -->
        <attr name="ssv_sun_radius" format="dimension"/>
        <!-- Sun color -->
        <attr name="ssv_sun_color" format="color|reference"/>

        <!-- Shadow color -->
        <attr name="ssv_shadow_color" format="color|reference"/>

        <!-- Label text size -->
        <attr name="ssv_label_text_size" format="dimension"/>
        <!-- Label text color -->
        <attr name="ssv_label_text_color" format="color|reference"/>
        <!-- Label vertical offset -->
        <attr name="ssv_label_vertical_offset" format="dimension"/>
        <!-- Label horizontal gap -->
        <attr name="ssv_label_horizontal_offset" format="dimension"/>
    </declare-styleable>


    <attr name="banner" format="reference" />

    <attr name="whiteBlack" format="color" />
    <attr name="blackWhite" format="color" />
    <attr name="surahName" format="color" />
    <attr name="accent" format="color" />
    <attr name="search" format="color" />
    <attr name="searchSheet" format="color" />
    <attr name="translitaration" format="color" />


</resources>